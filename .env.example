# ========================================
# AI Muse Blog - Frontend Environment
# ========================================

# ========================================
# API Configuration
# ========================================
# Backend API URL (change for production)
VITE_API_BASE_URL=http://localhost:8000
VITE_API_TIMEOUT=30000

# ========================================
# Application Settings
# ========================================
VITE_APP_NAME=AI Muse Blog
VITE_APP_VERSION=1.0.0
VITE_APP_URL=http://localhost:8080

# ========================================
# Feature Flags
# ========================================
VITE_ENABLE_COMMENTS=true
VITE_ENABLE_LIKES=true
VITE_ENABLE_BOOKMARKS=true
VITE_ENABLE_SOCIAL_SHARE=true

# ========================================
# Third-Party Services (Optional)
# ========================================
# Google Analytics
VITE_GA_MEASUREMENT_ID=

# Sentry for error tracking
VITE_SENTRY_DSN=

# ========================================
# Development Settings
# ========================================
# Only for development - enable debug mode
VITE_DEBUG=true
